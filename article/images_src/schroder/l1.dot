graph {
	size="4,4"
    graph [splines=false]
	r [label="" shape=none]

    1 [label="\\(1\\)" shape=none]

    s [label="\\(s\\)" shape=none]
    sl [label="" shape=none]
    sr [label="" shape=none]

    2 [label="\\(\\pointed{}\\)" shape=none]

	rr [label="" shape=none]
    r -- rr [style=invis]

    r -- 1 [style=dashed]
    1 -- s
    s -- sl [style=dashed]
    s -- sr [style=dashed]
    1 -- 2
}
