graph {
	size="4,4"
    graph [splines=false]
	r [label="" shape=none]

    1 [label="\\(2\\)" shape=none]

    t [label="\\(t'\\)" shape=none]
    tl [label="" shape=none]
    tr [label="" shape=none]

    2 [label="\\(1\\)" shape=none]

    s [label="\\(s\\)" shape=none]
    n [label="\\(\\pointed{}\\)" shape=none]

	rr [label="" shape=none]
    r -- rr [style=invis]

    r -- 1 [style=dashed]
    1 -- 2
    2 -- s
    2 -- n
    1 -- t

    t -- tl [style=dashed]
    t -- tr [style=dashed]
}
