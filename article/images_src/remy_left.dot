graph {
	size="4,4"
    graph [splines=false]
	r [label="" shape=none]
    1 [label="\\(\\n\\)" shape=none]
    2 [label="\\(\\pointed{\\n}\\)" shape=none]
    v [label="\\(\\tSub(v)\\)" shape=triangle height=2.5]
	rr [label="" shape=none]

    00 [label="" shape=none]
    01 [label="" shape=none]

    r -- 1 [style=dashed]
    r -- rr [style=invis]
    1 -- 2
    2 -- 00 [color=lightgreen]
    2 -- 01 [color=lightgreen]
    1 -- v [headport=n]
}
