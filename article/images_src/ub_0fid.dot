graph {
	size="4,4"
    graph [splines=false]
	r [label="" shape=none]

    1 [label="\\(\\n\\)" shape=none]

    v [label="\\(v\\)" shape=none]
    vl [label="" shape=triangle]
    vr [label="" shape=triangle]

    2 [label="\\(\\pointed{}\\)" shape=none]

	rr [label="" shape=none]
    r -- rr [style=invis]

    r -- 1 [style=dashed]
    1 -- v
    1 -- 2 [color=lightgreen]
    v -- vl [headport=n]
    v -- vr [headport=n]
}
