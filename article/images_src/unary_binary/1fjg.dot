graph {
	size="4,4"
    graph [splines=false]
	r [label="" shape=none]

    1 [label="\\(\\n\\)" shape=none]

    2 [label="\\(\\pointed{}\\)" shape=none]
    3 [label="" shape=none]

	rr [label="" shape=none]
    r -- rr [style=invis]

    r -- 1 [style=dashed]
    1 -- 2 [color=lightgreen]
    1 -- 3 [color=lightgreen]

    000 [style=invis]
    2 -- 000 [style=invis]
}
