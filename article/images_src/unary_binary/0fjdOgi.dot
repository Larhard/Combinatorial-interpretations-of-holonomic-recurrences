graph {
	size="4,4"
    graph [splines=false]
	r [label="" shape=none]

    1 [label="\\(\\n\\)" shape=none]

    v [label="\\(\\n\\)" shape=none]
    vl [label="" shape=triangle]
    vr [label="" shape=triangle]

    2 [label="\\(\\n\\)" shape=none]
    3 [label="" shape=none]
    4 [label="\\(\\pointed{}\\)" shape=none]

	rr [label="" shape=none]
    r -- rr [style=invis]

    r -- 1 [style=dashed]
    1 -- v
    v -- vl [headport=n]
    v -- vr [headport=n]
    1 -- 2
    2 -- 3 [color=lightgreen]
    2 -- 4 [color=lightgreen]

    000 [style=invis]
    vl -- 000 [style=invis]
}
