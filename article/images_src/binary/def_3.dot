graph {
	size="4,4"
    graph [splines=false]
	0 [label="" shape=none]
	B [label="" height=0.1 shape=circle style=filled fillcolor=black]
	1 [label="" shape=none]
    0 -- B [style=dashed]
    0 -- 1 [style=invis]
    B -- B1 [headport=n]
    B -- B2 [headport=n]
	B1 [label="\\(B\\)" shape=triangle height=1]
	B2 [label="\\(B\\)" shape=triangle height=1]
}
